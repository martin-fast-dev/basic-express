<!DOCTYPE html>
<html>
  <heaad>
    <link rel="stylesheet" href="css/status.css">
  </heaad>
  <body>
    <div id="wrapper">
      <section class="sec_include">
        <div class="container">
            <div class="col-xs-12 col-sm-4 col-md-4 adj_text">
              <h3>Status</h3>
              <% members.map((member) => { %>
                <div>
                  <form action="" method="post" id="myForm">
                    <p><%=member.username%></p>
                    <% for(let i = 0; i < member.hearts; i++) { %>
                      <span>*</span>
                    <% } %>
                    <input type="hidden" name="id" value="<%= member._id %>" />
                    <input type="hidden" name="hearts" value="<%= member.hearts %>" />
                    <span><button type="submit">+</button></span>
                  </form>
                </div>
              <% }) %>
            </div>
        </div>
      </section>
    </div>
  </body>
</html>
